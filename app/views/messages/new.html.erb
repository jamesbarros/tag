<hr><hr><br><h3><em><i><center>Messages</center></i></em></h3>
<hr><br>
<div class="contact_container">
  <div id="contact" >
    <h3>TAG You're it</h3>
    <h4><center><em>We're happy to hear from you</em></center></h4>
<%= form_for @message do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@message.errors.count, "error")} prohibited this message from being sent:" %>
      </h2>

      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    </div>
  <% end %>
<div align="center">

  <div class="field"><fieldset>
    <%= f.text_field(:name, placeholder: "Name", tabindex: "1", type: "text", required: "autofocus")%></fieldset>
  </div>

  <div class="field"><fieldset>
    <!-- <%= f.label :email %> -->
    <%= f.email_field(:email, placeholder: "e-mail", tabindex: "2", type: "email", required: true)  %></fieldset>
  </div>

  <div class="field"><fieldset>
    <!-- <%= f.label :subject %> -->
    <%= f.text_field(:subject, placeholder: "Topic", tabindex: "3", type:"subject", required: true)  %></fieldset>
  </div>

  <div class="field"><fieldset>
    <!-- <%= f.label :content %> -->
    <%= f.text_area(:content, placeholder: "Message...", tabindex: "4", required: true)  %></fieldset>
  </div>
  <div><fieldset>
    <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
    </fieldset>
  </div>

<% end %>
</div>
</div></div>

<hr><hr>
