<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>
<%= @my_id %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Price</th>
      <th>Detail</th>
      <th>Location</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.date %></td>
        <td><%= task.price %></td>
        <td><%= task.detail %></td>
        <td><%= task.location %></td>
        <!-- <td><%= task.user_id %></td> -->
        <td><%= task.user.name %></td>
        <!-- <td><%= task.user.email %></td> -->
        <td><%= link_to 'Show', task %></td>
        <!-- removed edit / destroy from un-owners in logic prior to view conditional below -->
        <% if task.user == current_user %>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
