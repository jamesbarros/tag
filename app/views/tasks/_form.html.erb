<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="input-group">
    <%= f.label :date %><br>
    <!-- <div class="form-control"> -->
      <%= f.datetime_select :date%>
    <!-- </div> -->
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, :type => "number", min: '0.00', max: '895', step: '0.25', placeholder: '3.50', required: true%>
  </div>

  <div class="field">
    <%= f.label :detail %><br>
    <%= f.text_area :detail %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </div>

  <div class="field">
   <%= f.label :status %><br>
   <%= f.select :task_status, @my_task_status_options %>
 </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
