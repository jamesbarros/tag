<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
<!-- Adjusted DateTime Field, now to adjust width of Form_field -->
  <!-- <div class="field"> -->
  <div class="datetimepicker">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
    <!-- <%= f.date_select :date %> -->
    <!-- <%= f.text_field :date %> -->
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :detail %><br>
    <%= f.text_area :detail %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </div>

  <div class="field">
   <%= f.label :status %><br>
   <%= f.select :task_status, @my_task_status_options %>
 </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
