<!-- Testing out Geotag Demo js Beg -->
<!-- Seems to work, lets adjust details -->
<script>
function initialize() {

    var tasks = [<%= raw @tasks.to_json %>][0]; // why does this have enclosing elements?

    window.map = new google.maps.Map(document.getElementById('map'), {
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        zoom: 11 // affects the zoom?  may not with so many markers spread out
    });

    var infowindow = new google.maps.InfoWindow();

    var bounds = new google.maps.LatLngBounds();

    for (i = 0; i < tasks.length; i++) {
        marker = new google.maps.Marker({
            position: new google.maps.LatLng(tasks[i].lat, tasks[i].lon),
            title: tasks[i].title,
            map: map
        });

        bounds.extend(marker.position);
  // Is this the click response..should all markers already list info so the click goes to info page?
        google.maps.event.addListener(marker, 'click', (function (marker, i) {
            return function () {
                //  var tag = tasks[i].price; // rig the varrible object for setContent
                //  tag = tasks[i].title;
                //  var tag = tasks[i].title + "  " + tasks[i].price;
                // var tag = (`<strong>${tasks[i].title}</strong> | ${tasks[i].price}`);
                var tag = (`<strong>${tasks[i].title}</strong> | ${tasks[i].price} | <a href="/tasks/${tasks[i].id}">${tasks[i].id}</a>`);

                infowindow.setContent(tag); // I don't know how to add more details here
                infowindow.open(map, marker);
            }
        })(marker, i));
    }

    map.fitBounds(bounds);
}

function loadScript() {
    var script = document.createElement('script');
    script.type = 'text/javascript';
    // script.src = 'https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&' + 'callback=initialize';
    script.src = 'https://maps.googleapis.com/maps/api/js?v=3.exp&' + 'callback=initialize';
    document.body.appendChild(script);
}

window.onload = loadScript;

</script>


